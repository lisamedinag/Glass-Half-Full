<h1>{{date}}</h1>

<form action="/calendar/new-event/{{day_id}}" method="POST">
  <label for="title">
    Category <input name="category" id="title" type="text">
  </label>
  </br>

  <label for="">
    Name of Event <input name="name" type="text">
  </label>
  </br>

  <label for="">
    Duration <input name="duration" type="number">
  </label>
  </br>

  <label for="cars">Choose a car:</label>

  <select name="duration" id="" type="number">
    <option value="15">15 minutes</option>
    <option value="30">30 minutes</option>
    <option value="45">45 minutes</option>
    <option value="60">1 hour</option>
    <option value="75">1 hour and 15 minutes</option>
    <option value="90">1 hour and 30 minutes</option>
    <option value="105">1 hour and 45 minutes</option>
    <option value="120">2 hours</option>
  </select>

  <label for="">
    Description <input name="description" type="text">
  </label>

  <button type="submit">Start</button>
</form>